{
	"name": "Browse Ya Later",
	"manifest_version": 3,
	"version": "1.0",
    "description": "Assists you to keep your focus on your tasks by distracting websites",
    "icons": {
        "16": "img/logo.png",
        "48": "img/logo.png",
        "128": "img/logo.png"
    },
	"permissions": ["tabs", "storage", "activeTab", "scripting"],
	"action": {
        "default_icon": {
            "16": "img/icon.png",
            "24": "img/icon.png",
            "32": "img/icon.png" 
        },
        "default_popup": "html/popupmenu.html"
    }
}